<% provide(:title, @employer.name) %>
<li>
  <%= link_to "All Employee", employers_path %>
</li>
<div class="row">
  <aside class="col-md-5">
    <section class="employer_info">
	    <h4>
        <li>Name: <%= @employer.name %></li>
        <li>Email: <%= @employer.email %></li>
        <li>BirthDate: <%= @employer.dateofbirth %></li>
        <li>
	        <% if @employer.gender? %>
		        Male
		      <% else  %>
		        Female
	        <% end %>
	      </li>
	      <li><%= @employer.location %> </li>
	      <li><%= @employer.phone %> </li>
      </h4>
		</section>
  </aside>
</div>